<!DOCTYPE html>
<html>
  <head>
    <title>ObjectDashboard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Object Dashboard</a>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <li class="flush-db"><%= link_to 'Flush DB', object_records_path, method: :delete %></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <% if flash[:alert] %>
        <div class="alert alert-dismissible alert-<%= flash[:alert]['type'] %>">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <p><%= flash[:alert]['message'] %></p>
        </div>
      <% end %>

      <%= yield %>

    </div>
  </body>
</html>
