<!DOCTYPE html>
<html>
  <head>
    <title>ObjectDashboard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Object Dashboard</a>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="success">
        <% if flash[:success] %>
          <p><%= flash[:success] %></p>
        <% end %>
      </div>
      <div class="alert">
        <% if flash[:alert] %>
          <p><%= flash[:alert] %></p>
        <% end %>
      </div>

      <%= yield %>

    </div>
  </body>
</html>
